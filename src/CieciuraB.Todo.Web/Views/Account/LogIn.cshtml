@model CieciuraB.Todo.Web.Persist.Domain.Account;
@{
    ViewData["Title"] = "Panel logowania";
}
<h4>@ViewData["Title"]</h4>

@using (Html.BeginForm("LogIn", "Account", FormMethod.Get, new {@enctype = "multipart/form-data"}))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Login, new {@class = "control-label col-md-2"})
            <div class="col-md-7">
                @Html.EditorFor(model => model.Login, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Login)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Haslo, new {@class = "control-label col-md-2 "})
            <div class="col-md-7">
                @Html.PasswordFor(model => model.Haslo, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Haslo)
            </div>

        </div>
        <div class="col-md-7">
            @{
                if (@Model?.Message != null)
                {
                    <div> @Model.Message </div>
                }
            }
        </div>
        <div class="col-md-7">
            <a class="btn btn-danger btn-sm float-left"
               asp-controller="Home"
               asp-action="Index">
                Anuluj
            </a>
            <input type="submit" class="btn btn-success float-right" value="Zaloguj"/>
        </div>

    </div>
}