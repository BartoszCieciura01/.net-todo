@using CieciuraB.Todo.Web.Persist.Domain
@model List<CieciuraB.Todo.Web.Persist.Domain.Item>;
@{
    ViewData["Title"] = "List";
}
<h1>@ViewData["Title"]</h1>
<table class="table table-hover table-bordered">
    <thead>
    <tr>
        <td>#</td>
        <td>Nazwa</td>
        <td>Opis</td>
        <td>Status</td>
        <td>Button</td>
    </tr>
    </thead>
    <tbody>
    @{
        int i = 0;
        foreach (CieciuraB.Todo.Web.Persist.Domain.Item item in Model)
        {
            i = i + 1;
            <tr>
                <td>@i.ToString().</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Priorytet</td>
                <td>
                    <a class="btn btn-primary btn-sm"
                       asp-controller="List"
                       asp-action="Edit"
                       asp-route-id="@item.Id.ToString()">
                        Edytuj
                    </a>
                    <a class="btn btn-danger btn-sm"
                       asp-controller="List"
                       asp-action="Delete"
                       asp-route-id="@item.Id.ToString()">
                        Usu≈Ñ
                    </a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>