@{
    ViewData["Title"] = "New";
}
<h1 class="display-4">stronka nowa</h1>


<body>
<script type="text/css">
body
{
background-color: #303030;
color: #ffffff;
}
 #container
{
width: 1000px;
height: 1000px;
margin-left: auto;
margin-right: auto;
height: auto;
}
.pole
{
 font-size: 50px;
}
</script>

<div id="container">
	<div class="pole">
		Wpisz tekst: <input id="tekst"style="font: 100px; font-weight: bold; width:300px; height:70px;">
		<button onclick="sprawdz()"style="font: 100px; font-weight: bold; width:200px; height:70px;">
			Sprawdź siłę hasła!</button>
	</div>
	<div class="pole">
		<p>Liczba liter: <span id="litery"></span></p>
	</div>
	<div class="pole">
		<p>Liczba cyfr: <span id="cyfry"></span></p>
	</div>
	<div class="pole">
		<p>Liczba znaków specjalnych: <span id="specjalne"></span></p>
	</div>
	<div class="pole">
		<p>Siła: <span id="sila"></span></p>
	</div>
</div>



<script type="text/javascript">
                function sprawdz() {
                    var tekst = document.getElementById('tekst').value;
                   
                    var litery = (tekst.toLowerCase().match(/[a-z ąężźćńłóś]/g) || '').length;
                    var cyfry = (tekst.match(/[0-9]/g) || '').length;
                    var specjalne = tekst.length - cyfry - litery;
                   
                    document.getElementById('litery').innerHTML = litery;
                    document.getElementById('cyfry').innerHTML = cyfry;
                    document.getElementById('specjalne').innerHTML = specjalne;
                   
                    var sila = ''
                   
                    if (tekst.length == 0) {
                        sila = '<span style="color: lightblue">wpisz tekst</span>';
                    } else {
                        if (tekst.length < 8) {
                            sila = '<span style="color: #ff0005">słabe</span>';
                        } else if (cyfry && !specjalne) {
                            sila = '<span style="color: orange">średnia</span>';
                        } else if (specjalne && cyfry) {
                            sila = '<span style="color: green">mocne</span>';
                        }
                    }          
                    document.getElementById('sila').innerHTML = sila;
                }
            </script>

</body>

