@model CieciuraB.Todo.Web.Persist.Domain.Item;
@{
    ViewData["Title"] = "Czy chcesz usunąć zadanie " + @Model.Name;
}
<h4>@ViewData["Title"]</h4>

@using (Html.BeginForm("Remove", "List", FormMethod.Get, new {@enctype = "multipart/form-data"}))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Description)
    @Html.HiddenFor(model => model.Priorytet)
    <div class="col-md-7">
        <a class="btn btn-primary btn-sm float-left"
           asp-controller="Home"
           asp-action="List">
            Nie
        </a>
       <input type="submit" class="btn btn-primary float-right" value="Tak"/>
    </div>
}