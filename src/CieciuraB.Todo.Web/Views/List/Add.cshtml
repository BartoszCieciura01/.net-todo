@using CieciuraB.Todo.Web.Persist.Domain
@model CieciuraB.Todo.Web.Persist.Domain.Item;
@{
    ViewData["Title"] = "Dodaj nowy kod błędu";
}
<h4>@ViewData["Title"]</h4>

@using (Html.BeginForm("Insert","List", FormMethod.Get, new { @enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
           
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Kod, new {@class = "control-label col-md-2"})
            <div class="col-md-7">
                @Html.EditorFor(model => model.Kod, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Kod)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Komunikat, new {@class = "control-label col-md-2"})
            <div class="col-md-7">
                @Html.EditorFor(model => model.Komunikat, new {htmlAttributes = new {@class = "form-control", rows = "2"}})
                @Html.ValidationMessageFor(model => model.Komunikat)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Przyczyna, new {@class = "control-label col-md-2"})
            <div class="col-md-7">
                @Html.EditorFor(model => model.Przyczyna, new {htmlAttributes = new {@class = "form-control", rows = "2"}})
                @Html.ValidationMessageFor(model => model.Przyczyna)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Rozwiazanie, new {@class = "control-label col-md-2"})
            <div class="col-md-7">
                @Html.EditorFor(model => model.Rozwiazanie, new {htmlAttributes = new {@class = "form-control", rows = "2"}})
                @Html.ValidationMessageFor(model => model.Rozwiazanie)
            </div>
        </div>
         <div class="form-group">
                    @Html.LabelFor(model => model.Uwaga, new {@class = "control-label col-md-2"})
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Uwaga, new {htmlAttributes = new {@class = "form-control", rows = "2"}})
                        @Html.ValidationMessageFor(model => model.Uwaga)
                    </div>
                </div>
        
        
        
        
        
        
        
        <div class="col-md-7">
            <a class="btn btn-danger btn-sm float-left"
               asp-controller="Home"
               asp-action="List">
                Anuluj
            </a>
            <input type="submit" class="btn btn-success float-right" value="Zapisz"/>
        </div>

    </div>
    
    
    
}